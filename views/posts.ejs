<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include("partials/links") %> 
  <link href="css/store.css" rel="stylesheet" />
  <link rel="shortcut icon" href="/images/1.svg" type="image/x-icon" />
  <title>Community</title>
</head>

<body class="page-top">

  <%- include("partials/navbar") %>

  <section id="postMast" class="homeMast" style="height: 550px;">
    <header class="masthead">
      <div class="container">
        
        <div class="masthead-heading text-uppercase">OUR COMMUNITY</div>



      </div>

    </header>

  </section>
  <section style="background-color: whitesmoke;">

    <% for(var i=0;i< posts.length;i++){ %>

    <div class="card mb-3" style="max-width: 50%; margin-right: auto; margin-left: auto;">
      <div class="row no-gutters">
        <div style="padding: 2.4%; text-align: center; margin-top: auto; margin-bottom: auto; " class="col-md-4">
          <i style="color: #fed136;" class="fas fa-5x fa-user-circle"></i>
          <h4 style="margin-top: 1.456%; color: #212529;"><%=posts[i].name%></h4>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Post #<%= i+1 %> </h5>
            <h5 style="text-transform: uppercase; font-size: 3rem; color: #212529;" class="card-title">
              <%=posts[i].title%></h5>

            
            <p class="textis card-text"> <%= posts[i].message %> </p>
            <a data-toggle="modal" data-target=#mymodal<%= posts[i]._id%> href="#">Read More...</a>



            <div id=mymodal<%= posts[i]._id %>  class="modal fade" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered modal-xl"  id=<%= posts[i]._id %>>
                <div style="border-radius: 1.4rem;" class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title"><%= posts[i].name %> </h5> <em>
                      <h5 class="text-muted modal-title">(Post #<%= i+1 %>)</h5>
                    </em>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                  </div>

                  <div style="padding: 0;" class="modal-body">

                    <div class="card" style="border-radius: 0%; width: 100%;">
                      <div class="container">
                        <div class="row">
                          <div class="col-8" style="padding: 0%;">
                            <%const v= Math.floor(Math.random() * 3)  %> 
                            <% const a=["https://images.unsplash.com/photo-1514163161321-f4f7c2a90296?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80","https://images.unsplash.com/photo-1489533119213-66a5cd877091?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1051&q=80","https://images.unsplash.com/photo-1461023058943-07fcbe16d735?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80","https://images.unsplash.com/photo-1511537190424-bbbab87ac5eb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1050&q=80"] %> 
                            <% console.log(v) %> 
                            <img
                            src= <%= a[v] %> 
                            src="https://www.incimages.com/uploaded_files/image/1920x1080/getty_500740897_200013331653767347294_333325.jpg"
                            style="border-radius: 0%;" class="recImg card-img-top" alt="...">
                          </div>
                          <div class="col" style="background-color: #F9F9F9;">
                            <div class="container" style="margin: 50px auto 50px auto;">
                              <p style="margin: 0%;">Blog</p>
                              <h5 style="text-transform: uppercase; font-size: 3rem; color: #212529;" class="card-title">
                                <%=posts[i].title%></h5>
  
                                <hr class="customhr">
                                <h5 style=" font-size: 1.5rem; color: #212529;" class="card-title">
                                  Welcome To The Community!</h5>

                                  <div class="pil" style="background-color: transparent; width: 10rem; margin: auto;">
                                    <h5 style="font-size: 0.5rem; letter-spacing: 0.7;font-family: 'Montserrat'; margin: auto;">
                                     <%=posts[i].type %>
                                    </h5>
                                  </div>
  
                                  <div style="margin-top: 50px; margin-left: auto; margin-right: auto;">
                                    <p class="card-text"><small class="text-muted">by <%=posts[i].name%> | <%= posts[i].date %> </small></p>
                                  </div>
                            </div>
                          </div>
                          
                        </div>
                      </div>
                     
                      <div class="card-body">

                        <h5 style="text-transform: uppercase; font-size: 3rem; color: #212529;" class="card-title">
                          <%=posts[i].title%></h5>
                          <hr style="width: 4rem;">

                       
                        
                          <p style="text-align: left; padding-left: 20%; padding-right: 20%; white-space: pre-line;" class="card-text"><%=posts[i].message%></p>




                      </div>


                    </div>

                  </div>
                

                </div>
              </div>
            </div>
            <p class="card-text"><small class="text-muted">Posted <%= posts[i].date %> </small></p>
          </div>
        </div>
      </div>
    </div>
    <% } %>

  </section>

  <section id="pages" style="margin-right: auto; margin-left: auto;" class="page-section">

    <div class="container">
      <% if(login){ %> 
      <form action="/posts" method="POST">
        <div class="row">

          <div style="padding: 3% 0 3% 9%;" class="col-lg-2" id="col">
            <i style="margin-right: 5.5%;" class="fas fa-5x fa-user-circle"></i>
          </div>

          <div class="col-lg-10">
            <input type="text" style="font-family: 'Montserrat'; display: block; text-transform: uppercase;"
              name="title" class="message clock " placeholder="Title *">


          

            <select style="width: 84%;" id="inputType" name="Type" class="form-control message clock op">
              <option selected>Choose Category</option>
              <option class="oppt">Education</option>
              <option class="oppt">Culture</option>
              <option class="oppt">Coffee</option>
              <option class="oppt">Guides</option>
            </select>
         
            <textarea rows="20" cols="50"  style=" width: 84%;" class="form-control message" id="message" name="message"
              placeholder="Your Post*" required="required"
              data-validation-required-message="Please enter a message."></textarea>


            <button
              style="margin-top: 2%; width: 84% !important; display: inline-block; font-family: 'Montserrat'; letter-spacing: 0.7; "
              class="btn btn-lg btn-warning">Submit</button>
          </div>
        </div>


      </form>
      <% }else{ %> 
            
      <div style="text-align: center;" >
        <div class="about" style="padding: 3.5% 3% 1% 3%; text-align: center; color:#212529">LOGIN TO POST  <i class="fas fa-user-circle"></i></div>
       
        <a style="margin-top: 6%; font-size: 3.2rem;border-radius: 3rem; padding:1% 3%;  text-align: center;" class="btn btn-lg btn-warning" href="/login" role="button">Login</a>
       </div>
       <% }%> 
    </div>
  </section>





  <%- include("partials/newsletter.ejs") %>
















  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
  <!-- Third party plugin JS-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>



  <!-- Core theme JS-->
  <script src="js/scripts.js"></script>
  <%- include("partials/footer") %>



</body>

</html>